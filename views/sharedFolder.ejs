<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css">
    <title>Shared folder</title>
</head>
<body>
<div>
   <h3> Folder name: <%= folderName %></h3>
    <ul class="files-list">
        <% if(files.length > 0 ){ %>
            <% files.forEach((file)=>{ %>
                <li class="file-list-item">
                    <a href="/files/share/<%= token %>/<%= file.id %>/download"><%= file.fileName %></a>
                    <a href="/files/share/<%= token %>/<%= file.id %>">Detail</a>
                </li>
            <% }) %>
        <% } %>
    </ul>
</div>
</body>
</html>